$color-1 = #A7A7A7

input
  outline none

.top-bar
  position fixed
  top 0vh
  left 0vh
  height 50px
  width 100vw
  box-shadow 0px 1px 8px grey
  background-color #FEFEFE

  input
    position absolute
    right 20px
    top 10px
    height 30px
    width 200px
    font-family Arial, Helvetica, sans-serif
    color gray
    text-align center
    border-radius 20px
    border solid 1px #dcdcdc

.logo
  position absolute
  left 95px
  top 5px
  height 42px
  width auto

.name
  position absolute
  left 10px
  top 5px
  font-size 2em


.under-top-bar-area
  position fixed
  top 50px
  left 0vw
  height calc(100% - 50px)
  width 100vw
  //border 1px blue dashed

.tab-menu-area
  position absolute
  top 0px
  left 0px
  height 400px
  width 130px
  border 1px black dashed

