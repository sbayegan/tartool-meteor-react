$color-1 = #A7A7A7

input
  outline none

.top-bar
  position fixed
  top 0vh
  left 0vh
  height 50px
  width 100vw
  box-shadow 0px 1px 8px grey
  background-color #FEFEFE

  input
    position absolute
    right 20px
    top 10px
    height 30px
    width 200px
    font-family Arial, Helvetica, sans-serif
    color gray
    text-align center
    border-radius 20px
    border solid 1px #dcdcdc

.logo
  position absolute
  left 95px
  top 5px
  height 42px
  width auto

.name
  position absolute
  left 10px
  top 5px
  font-size 2em


.under-top-bar-area
  position fixed
  top 50px
  left 0vw
  height calc(100% - 50px)
  width 100vw
  //border 1px blue dashed

.tab-menu-area
  position absolute
  top 0px
  left 0px
  height 400px
  width 130px
  //border 1px black dashed

.tab-content-area
  position absolute
  top 0px
  right 0px
  height 100%
  width calc(100% - 130px)
  border 1px purple dashed

.react-tabs [role=tab]
  width 125px
  height 125px
  border 1px solid transparent
  margin-top 5px

.react-tabs [role=tab][aria-selected=true]
  border-radius: 5px 5px 5px 5px;
  -moz-border-radius: 5px 5px 5px 5px;
  -webkit-border-radius: 5px 5px 5px 5px;

.react-tabs [role=tablist]
  border-bottom none
